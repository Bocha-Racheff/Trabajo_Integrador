<% if (dataUsuario) { %>  
	<%- include('partials/headerLogueado') %>
<% } else { %>
	<%- include('partials/header') %>
<% } %>	

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-md-6">
				<form action="/profile/update" method="POST">
					<div>
						<label class="form-label" for="">Email</label>
						<input class="form-control" type="email" name="email" value="<%= oldData.email || '' %>">
						<input type="hidden" name="oldEmail" value="<%= oldData.email || '' %>">
						<% if (errors && errors.email) { %>
							<div class="error-msg text-danger"><%= errors.email.msg %></div>
						<% } %>
					</div>
					<div>
						<label class="form-label" for="">Contrase√±a</label>
						<input class="form-control" type="password" name="password" value="">
					</div>
					<div>
						<label class="form-label" for="">Fecha de nacimiento</label>
						<input class="form-control" type="date" name="fecha_nacimiento" value="<%= oldData.fecha_nacimiento || '' %>">
					</div>
					<div>
						<label class="form-label" for="">DNI</label>
						<input class="form-control" type="number" name="dni" value="<%= oldData.dni || '' %>">
					</div>
					<div class="mb-3">
						<label class="form-label" for="">Foto de perfil</label>
						<input class="form-control" type="text" name="foto_perfil" value="<%= oldData.foto_perfil || '' %>">
					</div>

					<button class="btn btn-outline-success" type="submit">Editar</button>

				</form>
			</div>
		</div>
	</div>
			<%- include('partials/footer') %>