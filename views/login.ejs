<%- include('partials/header') %>

<div class="container mt-5">
    <h1 class="text-center mb-4">Ingresar</h1>
    <div class="d-flex justify-content-center mb-3">
        <a href="/" class="btn btn-link">Home</a>
        <a href="/register" class="btn btn-link">Registrate</a>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form action="/login" method="POST" class="border p-4 shadow-sm rounded">
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="email" value="<%= oldData.email ? oldData.email : '' %>">
                    <% if (errors.email) { %>
                        <div class="error-msj text-danger"><%= errors.email.msg %></div>
                    <% } %>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="contraseña">
                    <% if (errors.password) { %>
                        <div class="error-msj text-danger"><%= errors.password.msg %></div>
                    <% } %>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberme" name="rememberme" value="ok">
                    <label class="form-check-label" for="rememberme">Recordame</label>
                </div>
                <button type="submit" class="btn btn-primary w-100">Ingresar</button>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
