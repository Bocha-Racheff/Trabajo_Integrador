<%- include('partials/headerLogueado', {dataUsuario}) %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src='images/users/<%= dataUsuario.foto_perfil %>' alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= dataUsuario.usuario %>
						<a href="http://localhost:3000/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<p><%= dataUsuario.email %></p>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>

			<% for (let i = 0; i < 4; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="http://localhost:3000/products/detail/<%= listadoProductos[i].id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= listadoProductos[i].nombre_imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= listadoProductos[i].nombre_producto %></h2>
								<p><%= listadoProductos[i].descripcion %></p>
								<p>Comentarios: 3</p>
							</article>
						</a>
					</section>
				</div>
				
			<% } %>

			
		</div>
	</div>
	<!-- /Mis productos -->
	<%- include('partials/footer') %>