<%- include('partials/headerLogueado', {dataUsuario}) %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar productos</h2>
			</div>
			
			<div class="col-12 col-md-6">
				<form action="/products/update/<%= oldData.id %>" method="POST">
					<div>
						<label class="form-label" for="">Imagen producto</label>
						<input class="form-control" type="text" name="imgProducto" value="<%= oldData.imgProducto || '' %>">
						<% if (errors && errors.imgProducto) { %>
							<div class="error-msg text-danger"><%= errors.imgProducto.msg %></div>
						<% } %>
					</div>
					<div>
						<label class="form-label" for="">Título</label>
						<input class="form-control" type="text" name="titulo" value="<%= oldData.titulo || '' %>">
						<% if (errors && errors.titulo) { %>
							<div class="error-msg text-danger"><%= errors.titulo.msg %></div>
						<% } %>
					</div>
					<div class="mb-3">
						<label class="form-label" for="">Descripción</label>
						<textarea class="form-control" name="descripcion" rows="5"><%= oldData.descripcion || '' %></textarea>
						<% if (errors && errors.descripcion) { %>
							<div class="error-msg text-danger"><%= errors.descripcion.msg %></div>
						<% } %>
					</div>
					

					<button class="btn btn-outline-primary" type="submit">Editar producto</button>

				</form>
			</div>


			<%- include('partials/footer') %>