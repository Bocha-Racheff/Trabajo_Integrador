<%- include('partials/header') %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">

			<h2 class="products-title"><%= dataProducto.nombre_producto %></h2> 
			<p class="product-detail-description">
				<a class="btn btn-primary" href="http://localhost:3000/products/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= dataProducto.nombre_imagen %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= dataProducto.descripcion %></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">

						<% for (let i = 0; i < dataProducto.comentarios.length; i++) { %>
							<article>
								<img src="https://via.placeholder.com/35" alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="http://localhost:3000/profile"><%= dataProducto.comentarios[i].nombre_usuario %>: </a> </strong>
									<%= dataProducto.comentarios[i].texto_comentario %></p>
								</div>
							</article>
						<% } %>


					</section>
					<form class="form" action="" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->
	
	<%- include('partials/footer') %>
